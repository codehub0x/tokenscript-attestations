<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:flow="http://www.springframework.org/schema/webflow-config"
       xsi:schemaLocation="http://www.springframework.org/schema/webflow-config
http://www.springframework.org/schema/webflow-config/spring-webflow-config-2.4.xsd
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean class="org.springframework.webflow.mvc.servlet.FlowHandlerMapping">
        <property name="flowRegistry" ref="claimFlowRegistry"/>
    </bean>

    <flow:flow-builder-services id="flowBuilderServices"
                                view-factory-creator="mvcViewFactoryCreator"/>

    <bean id="mvcViewFactoryCreator" class="org.springframework.webflow.mvc.builder.MvcViewFactoryCreator">
        <property name="viewResolvers" ref="jspViewResolver"/>
    </bean>

    <flow:flow-registry id="claimFlowRegistry" flow-builder-services="flowBuilderServices">
        <flow:flow-location id="claimFlow" path="/WEB-INF/flows/claim-flow.xml"/>
    </flow:flow-registry>

    <bean class="org.springframework.webflow.mvc.servlet.FlowHandlerAdapter">
        <property name="flowExecutor" ref="claimFlowExecutor"/>
    </bean>
    <flow:flow-executor id="claimFlowExecutor" flow-registry="claimFlowRegistry"/>


</beans>
